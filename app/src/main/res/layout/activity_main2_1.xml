<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical"
    tools:context=".lab2_1.Main2_1_Activity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="108dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/walmart" />

    <TextView
        android:textSize="20dp"
        android:id="@+id/signInTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:text="Sign in to your account" />

    <TextView
        android:id="@+id/emailTextView"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/signInTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email address(required)"/>

    <EditText
        android:id="@+id/email"
        android:layout_below="@+id/emailTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/PwdTextView"
        android:layout_below="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Password(required)" />

    <EditText

        android:id="@+id/pwd"
        android:layout_below="@+id/PwdTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/forget"
        android:layout_below="@+id/pwd"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content"
        android:text="Forgot password?" />

    <Button
        android:layout_above="@+id/NoAccount"
        android:layout_centerHorizontal="true"
        android:id="@+id/signIn"
        android:layout_width="350dp"
        android:layout_height="35dp"
        android:background="@color/colorButton"
        android:layout_marginBottom="20dp"
        android:text="Sign in" />


    <TextView
        android:id="@+id/NoAccount"
        android:layout_above="@+id/create"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Doesn's have an account?" />

    <TextView
        android:gravity="center"
        android:id="@+id/create"
        android:autoLink="all"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:text="Create a new account" />

</RelativeLayout>