<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="edu.mum.lab2_1.CreateAccountActivity"
    tools:showIn="@layout/activity_create_account">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="108dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/walmart" />

    <TextView
        android:textSize="20dp"
        android:id="@+id/createAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:text="Create your account" />

    <TextView
        android:textStyle="bold"
        android:layout_marginBottom="30dp"
        android:id="@+id/requiredField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/createAccount"
        android:text="*required Field" />


    <TextView
        android:id="@+id/firstNameTextView"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/createAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="First name*"/>

    <EditText
        android:id="@+id/firstName"
        android:layout_below="@+id/firstNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/lastNameTextView"
        android:layout_below="@+id/firstName"
        android:text="Last name*"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/lastName"
        android:layout_below="@+id/firstName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/emailTextView"
        android:layout_below="@+id/lastName"
        android:text="Email address*"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/email"
        android:layout_below="@+id/emailTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/pwdTextView"
        android:layout_below="@+id/email"
        android:text="Password*"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/pwd"
        android:layout_below="@+id/pwdTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



    <Button
        android:gravity="center"
        android:id="@+id/createNew"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorButton"
        android:layout_alignParentBottom="true"
        android:textColor="@color/colorWhite"
        android:text="Create account" />

</RelativeLayout>